extends bloglayout
block bcontent
	include narbar.jade
	#dContent.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 用户名
						th 查看
						th 更新
						th 删除
				tbody
					each item in diaries
						tr(class="item-id-#{item._id}")
							td #{item.diarytitle}
							td: a(target="_blank",href="http://localhost:3000/diary/#{item._id}") 查看
							td: a(target="_blank",href="http://localhost:3000/diary/update/#{item._id}") 修改
							td: button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除	