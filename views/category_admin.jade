extends bloglayout
block bcontent
	include narbar.jade
	#acontent.container
		.row(style="margin-top:3%")
			form.form-horizontal(method="post",action="/admin/category/new")
				.form-group
					label.col-sm-2.control-label(for="inputCategory") 电影分类
					.col-sm-5
						input#inputCategory.form-control(type="text",name="category[name]",value=category.name,required)
					.col-sm-offset-2.col-sm-2
					button.btn.btn-default(type="submit") 录入