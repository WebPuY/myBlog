extends bloglayout
block bcontent
	include narbar.jade
	#acontent.container
		.row(style="margin-top:3%")
			form.form-horizontal(method="post",action="/admin/movie/new")
				if movie._id
					input(type="hidden",name="movie[_id]",value=movie._id)
				.form-group
					label.col-sm-2.control-label(for="inputCategory") 电影分类
					.col-sm-10
						input#inputCategory.form-control(type="text",name="movie[categoryName]",value=movie.categoryName)
				.form-group
					label.col-sm-2.control-label 分类选择
					each item in categories
						label.radio-inline
							input(type="radio",name="movie[category]",value=item._id,required)
							| #{item.name}
				.form-group
					label.col-sm-2.control-label(for="inputTitle") 电影名字
					.col-sm-10
						input#inputTitle.form-control(type="text",name="movie[title]",value=movie.title,required)
				.form-group
					label.col-sm-2.control-label(for="inputDoctor") 电影导演
					.col-sm-10
						input#inputDoctor.form-control(type="text", name="movie[doctor]", value=movie.doctor,required)
				.form-group
					label.col-sm-2.control-label(for="inputCountry") 国家
					.col-sm-10
						input#inputCountry.form-control(type="text", name="movie[country]", value=movie.country,required)
				.form-group
					label.col-sm-2.control-label(for="inputLanguage") 语种
					.col-sm-10
						input#inputLanguage.form-control(type="text", name="movie[language]", value=movie.language,required)
				.form-group
					label.col-sm-2.control-label(for="inputYear") 上映年代
					.col-sm-10
						input#inputYear.form-control(type="text", name="movie[year]", value=movie.year,required)
				.form-group
					label.col-sm-2.control-label(for="inputSummary") 电影简介
					.col-sm-10
						textarea#inputSummary.form-control(type="text", name="movie[summary]",required)= movie.summary
				.form-group
					label.col-sm-2.control-label(for="downloadurl") 网盘地址
					.col-sm-10
						input#downloadurl.form-control(type="text", name="movie[downloadurl]", value=movie.downloadurl,required)
				.form-group
					.col-sm-offset-2.col-sm-10
					button.btn.btn-default(type="submit") 录入