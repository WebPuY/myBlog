extends bloglayout
block bcontent
  include narbar
  div#container.container
    form(class='form-signin',method='POST',action="/user/reg")
      h2.form-signin-heading Please Register
      input(id='username' name='user[name]' type='text' class='form-control' required autofocus)
      input(id='password' name='user[password]' type='password' class='form-control' required)
      input(id='password-repeat' name='user[password-repeat]' type='password' class='form-control' placeholder='re-enter Password' required)
      button(class='btn btn-lg btn-primary btn-block' type='submit') Register
